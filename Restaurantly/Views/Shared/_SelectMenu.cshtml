<section id="menu" class="menu section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Menu</h2>
        <p>Check Our Tasty Menu</p>
    </div><!-- End Section Title -->

    <div class="container isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul class="menu-filters isotope-filters">
                    <li data-filter="*" class="filter-active">All</li>
                    <li data-filter=".filter-starters">Starters</li>
                    <li data-filter=".filter-salads">Salads</li>
                    <li data-filter=".filter-specialty">Specialty</li>
                </ul>
            </div>
        </div><!-- Menu Filters -->

        <div class="row isotope-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var product in Model)
            {
                <div
                    class="col-lg-6 menu-item isotope-item @(product.CategoryId == 1 ? "filter-starters" : product.CategoryId == 2 ? "filter-salads" : "filter-specialty")">
                    <img src="@Url.Content("~/img/menu/" + product.Image)" class="menu-img" alt="">
                    <div class="menu-content">
                        <a asp-controller="Menu" asp-action="Details" asp-route-id="@product.Id"
                            asp-route-name="@product.Name">@product.Name</a>

                        <span>@product.Price.ToString("C")</span>
                    </div>
                    <div class="menu-ingredients">
                        @product.Description
                    </div>
                </div>
            }
        </div>
    </div>

</section>
