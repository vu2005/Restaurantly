@model Restaurantly.ViewModels.HomeViewModel // Use the ViewModel
<main class="main">
    <!-- Hero Section -->
    <section id="hero" class="hero section dark-background">
        <img src="~/img/hero-bg.jpg" alt="" data-aos="fade-in">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 d-flex flex-column align-items-center align-items-lg-start">
                    <h2 data-aos="fade-up" data-aos-delay="100">Welcome to <span>Restaurantly</span></h2>
                    <p data-aos="fade-up" data-aos-delay="200">Delivering great food for more than 18 years!</p>
                    <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
                        <a href="#menu" class="cta-btn">Our Menu</a>
                        <a href="#book-a-table" class="cta-btn">Book a Table</a>
                    </div>
                </div>
                <div class="col-lg-4 d-flex align-items-center justify-content-center mt-5 mt-lg-0">
                    <a href="https://www.youtube.com/watch?v=Y7f98aduVJ8" class="glightbox pulsating-play-btn"></a>
                </div>
            </div>
        </div>
    </section>

    @await Html.PartialAsync("_About")
    @await Html.PartialAsync("_WhyUs")
    @await Html.PartialAsync("_SelectMenu", Model.Products) <!-- Pass Products to the partial view -->
    @await Html.PartialAsync("_BookTable", Model.BookTable) <!-- Pass BookTable to the partial view -->
    @await Html.PartialAsync("_Specials")
    @await Html.PartialAsync("_Event")
    @await Html.PartialAsync("_Carousel")
    @await Html.PartialAsync("_Gallery")
    @await Html.PartialAsync("_Chefs")
    @await Html.PartialAsync("_ContactUs", Model.Contact) <!-- Pass Contact to the partial view -->
</main>
