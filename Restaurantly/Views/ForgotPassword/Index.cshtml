<section id="hero" class="hero section dark-background">
    <img src="~/img/res.jpeg" alt="" data-aos="fade-in">

    <div class="container">
        <div class="row">
            <div class="col-lg-8 d-flex flex-column align-items-center align-items-lg-start">
                <h2 data-aos="fade-up" data-aos-delay="100">Welcome to <span>Restaurantly</span></h2>
                <p data-aos="fade-up" data-aos-delay="200">Please enter your email to reset your password.</p>
                <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
                    <a href="#menu" class="cta-btn">Our Menu</a>
                    <a href="#book-a-table" class="cta-btn">Book a Table</a>
                </div>
            </div>
            <div class="col-lg-4 d-flex align-items-center justify-content-center mt-5 mt-lg-0">
                <div>
                    <!-- Form Quên Mật Khẩu -->
                    <h3 class="text-center mb-3">Forgot Password</h3>
                    <style>
                        /* CSS cho input */
                        .transparent-input {
                            border-radius: 20px;
                            /* Bo tròn góc */
                            background-color: transparent;
                            /* Nền trong suốt */
                            color: #fff;
                            /* Màu chữ trắng */
                            padding: 12px;
                            /* Khoảng cách bên trong */
                            width: 100%;
                            /* Chiều rộng 100% */
                            border: 2px solid transparent;
                            /* Đường viền trong suốt */
                            outline: none;
                            /* Xóa viền mặc định */
                            border: 2px solid #ffcc80;
                        }

                        .cta-btn {
                            border-radius: 20px;
                            /* Bo tròn góc cho nút */
                            background-color: transparent;
                            /* Nền trong suốt */
                            color: #fff;
                            /* Màu chữ trắng */
                            border: 2px solid transparent;
                            /* Đường viền trong suốt */
                            cursor: pointer;
                            /* Con trỏ chuột là hình tay */
                            padding: 10px 20px;
                            /* Khoảng cách bên trong */
                        }

                        .cta-btn:hover {
                            border: 2px solid #ffcc80;
                            /* Đổi đường viền thành màu cam nhạt khi di chuột vào */
                        }
                    </style>

                    <div class="container mt-5">
                        @model Restaurantly.ViewModels.ForgotPasswordViewModel

                        <h2>Forgot Password</h2>

                        <form asp-action="Index" asp-controller="ForgotPassword" method="post">
                            <div class="form-group">
                                <label asp-for="Email" class="text-white"></label>
                                <input asp-for="Email" placeholder="Your email" class="transparent-input" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="cta-btn center" style="margin:10px 40px 0px 0px">
                                Reset Password<i class="fas fa-arrow-right" style="margin-left: 20px"></i>
                            </button>
                        </form>

                        @section Scripts {
                            @{
                                await Html.RenderPartialAsync("_ValidationScriptsPartial");
                            }
                        }
                    </div>
                </div>
                <!-- End Form Quên Mật Khẩu -->
            </div>
        </div>
    </div>
</section>
