<section id="hero" class="hero section dark-background">

    <img src="~/img/page-title-bg.webp" alt="" data-aos="fade-in">

    <div class="container">
        <div class="row">
            <div class="col-lg-8 d-flex flex-column align-items-center align-items-lg-start">
                <h2 data-aos="fade-up" data-aos-delay="100">Welcome to <span>Restaurantly</span></h2>
                <p data-aos="fade-up" data-aos-delay="200">Delivering great food for more than 18 years!</p>
                <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
                    <a href="#menu" class="cta-btn">Our Menu</a>
                    <a href="#book-a-table" class="cta-btn">Book a Table</a>
                </div>
            </div>
            <div class="col-lg-4 d-flex align-items-center justify-content-center mt-5 mt-lg-0">
                <div>
                    <!-- Form Login -->
                    <style>
                        /* CSS cho input */
                        .transparent-input {
                            border-radius: 20px;
                            /* Bo tròn góc */
                            background-color: transparent;
                            /* Nền trong suốt */
                            color: #fff;
                            /* Màu chữ trắng */
                            padding: 12px;
                            /* Khoảng cách bên trong */
                            width: 100%;
                            /* Chiều rộng 100% */
                            border: 2px solid #ffcc80;
                            /* Đường viền màu cam nhạt khi input được chọn */
                            outline: none;
                            /* Xóa viền mặc định */
                        }



                        .cta-btn {
                            border-radius: 20px;
                            /* Bo tròn góc cho nút */
                            background-color: transparent;
                            /* Nền trong suốt */
                            color: #fff;
                            /* Màu chữ trắng */
                            border: 2px solid transparent;
                            /* Đường viền trong suốt */
                            cursor: pointer;
                            /* Con trỏ chuột là hình tay */
                            padding: 10px 20px;
                            /* Khoảng cách bên trong */
                        }

                        .social-links img {
                            width: 30px !important;
                            /* Đặt chiều rộng */
                            height: 30px !important;
                            /* Đặt chiều cao */
                            position: relative !important;
                            /* Đặt vị trí tương đối để ghi đè */
                            inset: none !important;
                            /* Ghi đè inset nếu cần */
                        }

                        .cta-btn:hover {
                            border: 2px solid #ffcc80;
                            /* Đổi đường viền thành màu cam nhạt khi di chuột vào */
                        }
                    </style>


                    <div class="container mt-5">
                        @model Restaurantly.ViewModels.LoginViewModel

                        <h2>Login</h2>

                        <form asp-action="Index" method="post">
                            <div class="form-group">
                                <label asp-for="Email" class="text-white"></label>
                                <input asp-for="Email" placeholder="Your email" class="transparent-input" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="text-white"></label>
                                <input asp-for="Password" type="password" placeholder="Your password"
                                    class="transparent-input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="cta-btn center" style="margin:10px 40px 0px 0px">
                                Login
                            </button>
                            <a class="cta-btn center" asp-controller="ForgotPassword">Forgot Password</a>
                        </form>


                        @section Scripts {
                            @{
                                await Html.RenderPartialAsync("_ValidationScriptsPartial");
                            }
                        }


                    </div>

                </div>
                <!-- End Form Login -->
            </div>
        </div>
    </div>

</section>
